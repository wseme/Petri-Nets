<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

	android:id="@+id/linearLayout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<edu.monmouth.Panel android:layout_height="fill_parent"
		android:id="@+id/Panel" android:layout_width="fill_parent" />
s
	<HorizontalScrollView android:layout_height="60dp"
		android:id="@+id/horizontalScrollView1" android:layout_alignParentBottom="true"
		android:layout_width="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/tableLayout" android:orientation="horizontal"
			android:layout_height="fill_parent" >
			<Button android:layout_width="wrap_content" android:id="@+id/TransitionButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="Transition" android:textSize="14dp" android:onClick="onClick"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/PlaceButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="   Place  " android:textSize="14dp" android:onClick="onClick"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/ArcButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="  Arc   " android:textSize="14dp" android:onClick="onClick"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/PlusButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="  +  " android:textSize="25dp" android:onClick="onClick"
				android:layout_gravity="bottom"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/MinusButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="   -  " android:textSize="25dp" android:onClick="onClick"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/FireButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="  Fire  " android:textSize="14dp" android:onClick="onClick"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/MoveButton"
				android:background="@drawable/btn_normal" android:layout_height="fill_parent"
				android:text="  Move  " android:textSize="14dp" android:onClick="onClick"></Button>
			<Button android:layout_width="wrap_content" android:id="@+id/DeleteButton"
				android:background="@drawable/btn_pressed" android:layout_height="fill_parent"
				android:text=" Delete " android:textSize="14dp" android:onClick="onClick"></Button>
		</LinearLayout>
	</HorizontalScrollView>


</RelativeLayout>
